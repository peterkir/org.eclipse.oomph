{
    "package": {
        "name": "$BINTRAY_PACKAGE",
        "repo": "generic",
        "subject": "peterkir",
        "desc": "generated and pushed from TravisCI",
        "github_use_tag_release_notes": true,
        "github_release_notes_file": "RELEASE.txt",
        "licenses": ["EPL-1.0"],
        "labels": [""],
        "public_download_numbers": true,
        "public_stats": true
	},

    "version": {
        "name": "$VERSION",
        "desc": "https://travis-ci.org/peterkir/org.eclipse.oomph/builds/$TRAVIS_BUILD_ID",
        "released": "$DATE",
        "vcs_tag": "$TRAVIS_COMMIT",
        "attributes": [
           {"name": "TRAVIS_BRANCH"      , "values" : ["$TRAVIS_BRANCH"]       , "type": "string"},
           {"name": "TRAVIS_JOB_NUMBER"  , "values" : ["$TRAVIS_JOB_NUMBER"]   , "type": "string"},
           {"name": "TRAVIS_BUILD_ID"    , "values" : ["$TRAVIS_BUILD_ID"]     , "type": "string"},
           {"name": "TRAVIS_BUILD_NUMBER", "values" : ["$TRAVIS_BUILD_NUMBER"] , "type": "string"},
           {"name": "TRAVIS_JOB_NUMBER"  , "values" : ["$TRAVIS_JOB_NUMBER"]   , "type": "string"},
           {"name": "TRAVIS_COMMIT"      , "values" : ["$TRAVIS_COMMIT"]       , "type": "string"}
        ]
    },

    "files":
        [
           { "includePattern": "products/org.eclipse.oomph.setup.installer.product/target/products/(.*\.zip)",
             "uploadPattern": "$BINTRAY_PACKAGE/$VERSION/$TRAVIS_BRANCH/$TRAVIS_BUILD_NUMBER/products/$1" },

           { "includePattern": "products/org.eclipse.oomph.setup.installer.product/target/repository/(.*?\.?.*)",
             "uploadPattern": "$BINTRAY_PACKAGE/$VERSION/$TRAVIS_BRANCH/$TRAVIS_BUILD_NUMBER/p2/installer/$1" },
           { "includePattern": "products/org.eclipse.oomph.setup.installer.product/target/repository/content.jar",
             "uploadPattern": "$BINTRAY_PACKAGE/$VERSION/$TRAVIS_BRANCH/$TRAVIS_BUILD_NUMBER/p2/installer/content.jar" },
           { "includePattern": "products/org.eclipse.oomph.setup.installer.product/target/repository/artifacts.jar",
             "uploadPattern": "$BINTRAY_PACKAGE/$VERSION/$TRAVIS_BRANCH/$TRAVIS_BUILD_NUMBER/p2/installer/artifacts.jar" },

           { "includePattern": "sites/org.eclipse.oomph.site/target/repository/(.*?\.?.*)", 
             "uploadPattern": "$BINTRAY_PACKAGE/$VERSION/$TRAVIS_BRANCH/$TRAVIS_BUILD_NUMBER/p2/oomph/$1" },
           { "includePattern": "sites/org.eclipse.oomph.site/target/repository/content.jar", 
             "uploadPattern": "$BINTRAY_PACKAGE/$VERSION/$TRAVIS_BRANCH/$TRAVIS_BUILD_NUMBER/p2/oomph/content.jar" },
           { "includePattern": "sites/org.eclipse.oomph.site/target/repository/artifacts.jar", 
             "uploadPattern": "$BINTRAY_PACKAGE/$VERSION/$TRAVIS_BRANCH/$TRAVIS_BUILD_NUMBER/p2/oomph/artifacts.jar" }
        ],
    "publish": true
}
